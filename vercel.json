{
  "buildCommand": "yarn --cwd frontend install && yarn --cwd frontend build",
  "installCommand": "yarn install",
  "outputDirectory": "frontend/dist/frontend/browser",
  "framework": "angular",
  "functions": {
    "api/[...path].js": {
      "maxDuration": 60,
      "memory": 1024,
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    {
      "src": "^/(?!.*\\.).*$",
      "dest": "/api/ssr.js"
    },
    {
      "src": "/(.*)",
      "dest": "$1"
    }
  ]
}
